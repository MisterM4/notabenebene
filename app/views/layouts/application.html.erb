<!DOCTYPE html>
<html>
  <head>
    <title>Notabenebene</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <h1 class="navbar-brand">NotaBeneBene</h1>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a><%= link_to  'Accueil', root_path, class:"nav-link" %></a>
        </li>
        <li class="nav-item">
          <a><%= link_to  'Mes notes', posts_path, class:"nav-link"  %></a>
        </li>
      </ul>
      <form class="d-flex">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to current_user.email, user_path(current_user), class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to  'Deconnexion', destroy_user_session_path, method: :delete, class: "nav-link" %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to  'Connexion', new_user_session_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to  'Inscription', new_user_registration_path, class: "nav-link" %>
                </li>
              <% end %>
            </ul>
          </form>
    </div>
  </nav>
  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>
